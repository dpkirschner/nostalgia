# PostgreSQL Credentials (used by postgres container)
POSTGRES_USER=nostalgia
POSTGRES_PASSWORD=nostalgia_dev
POSTGRES_DB=nostalgia

# PostgreSQL connection URL for API
# For local development (connecting from host machine to docker postgres):
DATABASE_URL=postgresql+asyncpg://nostalgia:nostalgia_dev@localhost:5432/nostalgia

# For docker-compose API container (connecting from api container to postgres container):
# DATABASE_URL=postgresql+asyncpg://nostalgia:nostalgia_dev@postgres:5432/nostalgia

# For Supabase (same driver, different host):
# DATABASE_URL=postgresql+asyncpg://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Application Configuration
CORS_ORIGINS=["http://localhost:3000"]
LOG_LEVEL=INFO
